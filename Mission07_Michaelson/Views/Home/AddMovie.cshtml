@model Mission07_Michaelson.Models.Movie

@{
    ViewData["Title"] = "Add Movie";
}

<div class="container">
    <h2>Add Movie</h2>
    <form asp-action="AddMovie" method="post">
        <div class="form-group">
            <label>Title:</label>
            <input type="text" class="form-control" asp-for="Title" required>
        </div>
        <div class="form-group">
            <label>Category:</label>
            <input type="text" class="form-control" asp-for="Category" required>
        </div>
        <div class="form-group">
            <label>Year:</label>
            <input type="text" class="form-control" asp-for="Year" required>
        </div>
        <div class="form-group">
            <label>Director:</label>
            <input type="text" class="form-control" asp-for="Director" required>
        </div>
        <div class="form-group">
            <label>Rating:</label>
            <select asp-for="Rating" class="form-control" required>
                <option value="">Select Rating</option> <!-- Provide an empty option as a default -->
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
    </select>
        </div>

        <div class="form-group">
            <label>Edited:</label>
            <select asp-for="Edited" class="form-control">
                @* <option value=""></option> *@
                <option value="false">No</option>
                <option value="true">Yes</option>
                
            </select>
        </div>
        <div class="form-group">
            <label>Lent To:</label>
            <input type="text" class="form-control" asp-for="LentTo">
        </div>
        <div class="form-group">
            <label>Notes:</label>
            <textarea class="form-control" asp-for="Notes" maxlength="25"></textarea>
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Add Movie</button>
    </form>
</div>
